<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calendario">

  <com.github.sundeepk.compactcalendarview.CompactCalendarView
      android:id="@+id/compactcalendar_view"
      android:layout_width="fill_parent"
      android:layout_height="250dp"
      android:layout_marginStart="31dp"
      android:layout_marginLeft="31dp"
      android:layout_marginTop="176dp"
      android:layout_marginEnd="31dp"
      android:layout_marginRight="31dp"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      app:compactCalendarBackgroundColor="#80F8F2F2"
      app:compactCalendarCurrentDayBackgroundColor="#00DA0202"
      app:compactCalendarCurrentSelectedDayBackgroundColor="#F74F4F"
      app:compactCalendarMultiEventIndicatorColor="#070707"
      app:compactCalendarTargetHeight="250dp"
      app:compactCalendarTextColor="#050505"
      app:compactCalendarTextSize="14sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>